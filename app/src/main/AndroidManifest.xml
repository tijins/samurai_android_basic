<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esp.basicapp">

    <application
        android:name=".BasicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicApp">
        <activity
            android:name=".LinearLayoutActivity"
            android:label="@string/linear_layout_label" />
        <activity
            android:name=".ConstraintLayoutActivity"
            android:label="@string/constraint_layout_label" />
        <activity
            android:name=".SpinnerSampleActivity"
            android:label="@string/spinner_label" />
        <activity
            android:name=".HomeworkActivity"
            android:label="@string/homework_label" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
